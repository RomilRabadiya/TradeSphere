@{
    ViewData["Title"] = "Access Denied";
}



<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="empty-state">
                <i class="fas fa-lock empty-state-icon text-danger" style="font-size: 4rem;"></i>
                <h2 class="empty-state-title text-danger">Access Denied</h2>
                <p class="empty-state-text">
                    Sorry, you don't have permission to access this resource. This could happen for several reasons:
                </p>
                
                <div class="mt-4">
                    <h6>What can you do?</h6>
                    <div class="action-buttons">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                            <i class="fas fa-home me-2"></i>Go to Dashboard
                        </a>
                        
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a href="@Url.Action("Login", "Account")" class="btn btn-success">
                                <i class="fas fa-sign-in-alt me-2"></i>Login
                            </a>
                        }
                        else if (!User.IsInRole("Trader"))
                        {
                            <a href="@Url.Action("Apply", "Trader")" class="btn btn-info">
                                <i class="fas fa-user-plus me-2"></i>Apply as Trader
                            </a>
                        }
                    </div>
                </div>

                <div class="mt-4 pt-3 border-top">
                    <small class="text-muted">
                        <i class="fas fa-question-circle me-1"></i>
                        If you believe this is an error, please contact support or try logging in again.
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/tradesphere.js"></script>