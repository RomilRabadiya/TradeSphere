@model IEnumerable<TradeSphere3.Models.Trader>

    @{
    ViewData["Title"] = "Trader Directory";
    }

<div class="container page-container mt-4">

    <p class="text-muted" style="font-size=15px;">
        🔍 Search by <strong>GST No</strong>, <strong>CIN</strong>, or <strong>Name</strong>.
        Exact or longer GST matches appear first, then CIN matches, followed by partial name results.
    </p>

    <!-- Search Form -->
    <div class="search-card card mb-4">
        <div class="card-body">
            <form method="get" asp-action="List" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="name" value="@Context.Request.Query["name"]" class="form-control" placeholder="Search by Name" />
                </div>
                <div class="col-md-3">
                    <input type="text" name="cin" value="@Context.Request.Query["cin"]" class="form-control" placeholder="Search by CIN" />
                </div>
                <div class="col-md-3">
                    <input type="text" name="gstNo" value="@Context.Request.Query["gstNo"]" class="form-control" placeholder="Search by GST No" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="table-responsive">
        <table class="table table-bordered table-striped shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>Name</th>
                    <th>CIN</th>
                    <th>GST No</th>
                    <th>Email</th>
                    <th>Joined</th>
                    <th>Profile</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                <tr>
                    <td colspan="7" class="text-center text-muted">No traders found.</td>
                </tr>
                }
                else
                {
                    foreach (var t in Model)
                    {
                        <tr>
                            <td>@t.Name</td>
                            <td>@t.CIN</td>
                            <td>@t.GSTNo</td>
                            <td>@t.User?.Email</td>
                            <td>@t.RegistrationDate.ToShortDateString()</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@t.TraderId" class="btn btn-sm btn-info">
                                    View
                                </a>
                            </td>
                            <td>
                                <a asp-controller="Message" asp-action="Send" asp-route-receiverId="@t.TraderId" class="btn btn-sm btn-info">
                                    Message
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
