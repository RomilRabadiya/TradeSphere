@model TradeSphere3.Models.Trader

@{
    ViewData["Title"] = "Trader Profile";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-sm">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">@Model.Name</h3>
                    <span class="badge bg-info">@Model.TradeRole</span>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">CIN</dt>
                                <dd class="col-sm-8">@Model.CIN</dd>

                                <dt class="col-sm-4">GST No</dt>
                                <dd class="col-sm-8">@Model.GSTNo</dd>

                                <dt class="col-sm-4">ISO</dt>
                                <dd class="col-sm-8">@Model.ISO</dd>

                                <dt class="col-sm-4">Email</dt>
                                <dd class="col-sm-8">@Model.Email</dd>

                                <dt class="col-sm-4">Phone</dt>
                                <dd class="col-sm-8">@Model.Phone</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row mb-0">
                                <dt class="col-sm-4">Country</dt>
                                <dd class="col-sm-8">@Model.Country</dd>

                                <dt class="col-sm-4">State</dt>
                                <dd class="col-sm-8">@Model.State</dd>

                                <dt class="col-sm-4">City</dt>
                                <dd class="col-sm-8">@Model.City</dd>

                                <dt class="col-sm-4">Address</dt>
                                <dd class="col-sm-8">@Model.Address</dd>
                            </dl>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Registration Date:</strong> @Model.RegistrationDate.ToString("MMM dd, yyyy")</p>
                            @if (Model.UpdatedAt.HasValue)
                            {
                            <p class="mb-1"><strong>Last Updated:</strong> @Model.UpdatedAt.Value.ToString("MMM dd, yyyy")</p>
                            }
                        </div>
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Turnover:</strong> $@Model.Turnover.ToString("N2")</p>
                            <p class="mb-1"><strong>Trust Score:</strong> @Model.TrustScore.ToString("N2")</p>
                        </div>
                    </div>

                    <hr />

                    <div class="row">
                        <div class="col-md-6">
                            <p class="mb-1"><strong>Linked User:</strong> @Model.User?.Email</p>
                        </div>
                    </div>

                    <hr />

                    @{ double avg = ViewBag.AverageRating != null ? (double)ViewBag.AverageRating : 0.0; var percent = (int)Math.Round((avg / 5.0) * 100); }
                    <div class="rating-card card mt-4">
                        <div class="card-body d-flex flex-wrap align-items-center justify-content-between">
                            <div class="me-3">
                                <div class="text-muted small mb-1">Average Rating</div>
                                <div class="d-flex align-items-center gap-3">
                                    <div class="rating-stars" style="--rating-percent:@percent%" aria-label="@avg.ToString("0.0") out of 5 stars"></div>
                                    <div class="rating-number"><span class="display-6 fw-bold">@avg.ToString("0.0")</span><span class="text-muted">/5</span></div>
                                </div>
                                <div class="rating-subtext text-muted mt-1">Updated from recent feedback</div>
                            </div>
                            <div class="mt-3 mt-md-0">
                                @if (avg <= 0)
                                {
                                    <span class="badge bg-secondary">No ratings yet</span>
                                }
                            </div>
                        </div>
                    </div>

                    <div class="mb-3 d-none">
                        <strong>Average Rating:</strong>
                        @if ((double)ViewBag.AverageRating > 0)
                            {
                                <!-- Stars -->
                        @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= (double)ViewBag.AverageRating)
                                    {
                        <span class="text-warning">&#9733;</span>
                                    }
                                    else
                                    {
                        <span class="text-muted">&#9734;</span>
                                    }
                                }
                        <span class="ms-2">(@((double)ViewBag.AverageRating).ToString("0.0"))</span>
                            }
                            else
                            {
                        <span class="text-muted">No ratings yet</span>
                            }
                    </div>


                    <a asp-controller="Feedback" asp-action="Feedback" asp-route-traderId="@Model.TraderId" class="btn btn-primary">
                        <i class="fas fa-comments"></i> View Feedback
                    </a>

                    <a asp-action="Transactions" asp-route-id="@Model.TraderId" class="btn btn-primary ms-2">
                        <i class="fas fa-receipt"></i> View Transactions
                    </a>

                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <a href="mailto:@Model.Email" class="btn btn-success ms-2">
                            <i class="fas fa-envelope"></i> Contact via Email
                        </a>
                    }

                    <div class="mt-3">
                        <a asp-action="List" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Directory
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
