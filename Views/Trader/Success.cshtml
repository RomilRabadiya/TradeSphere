@{
    ViewData["Title"] = "Application Submitted";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card text-center">
                <div class="card-body">
                    <div class="mb-4">
                        <i class="fas fa-check-circle text-success" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="card-title text-success">Application Submitted Successfully!</h2>
                    <p class="card-text">
                        Thank you for applying to become a trader on TradeSphere. Your application has been received and is being reviewed by our team.
                    </p>
                    <p class="card-text">
                        You will receive a notification once your application has been processed. This typically takes 1-3 business days.
                    </p>
                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">Return to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>