@model List<TradeSphere3.DTOs.TraderDto>

<div class="p-3">
    <h4 class="mb-3">Start New Chat</h4>
    
    <div class="alert alert-info mb-3">
        <small class="mb-0">
            <i class="bi bi-info-circle me-2"></i>
            When you search, results are shown in priority order: Exact GST match > Exact CIN match > GST prefix match > CIN prefix match > Name match.
        </small>
    </div>
    
    <!-- No Search Message -->
    <div class="alert alert-success mb-3">
        <h5 class="alert-heading"><i class="bi bi-people me-2"></i>All Available Traders</h5>
        <p class="mb-0">When no search terms are entered, all traders with whom you haven't had conversations will be displayed in alphabetical order.</p>
    </div>

    @await Html.PartialAsync("_TraderSearchBar")

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>CIN</th>
                <th>GST No</th>
                <th>Email</th>
                <th>Joined</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        @if (Model.Any())
        {
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.Name</td>
                    <td>@t.CIN</td>
                    <td>@t.GSTNo</td>
                    <td>@t.Email</td>
                    <td>@t.RegistrationDate.ToShortDateString()</td>
                    <td>
                        <a href="/ChatView/StartChat?traderId=@t.Id" class="btn btn-primary btn-sm">Chat</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="6" class="text-center">No new traders available.</td>
            </tr>
        }
        </tbody>
    </table>
</div>
