@{
    ViewData["Title"] = "Dashboard";
}



<div class="container py-4">
    <!-- Enhanced Welcome Section -->
    <div class="dashboard-welcome">
        <h2>Welcome back, @ViewBag.UserName! <i class="fas fa-hand-wave"></i></h2>
        <p class="lead">
            Role: <strong>@ViewBag.Role</strong> | Ready to manage your business
        </p>
    </div>

    <!-- Role-based Quick Actions -->
    @if (ViewBag.Role == "Trader" && ViewBag.HasTraderProfile)
    {

    <div class="col-md-6 col-lg-4 mb-4">
        <div class="card trader-card border-0 shadow-lg rounded-4 text-center h-100">
            <div class="card-body d-flex flex-column justify-content-between p-4">

                <!-- Icon in gradient circle -->
                <div class="mb-3">
                    <div class="icon-circle mx-auto">
                        <i class="fas fa-store"></i>
                    </div>
                </div>

                <!-- Title -->
                <h4 class="fw-bold text-dark mb-3">Browse Traders</h4>

                <!-- Description -->
                <p class="text-muted small mb-1">✨ Discover <strong>verified traders</strong> on TradeSphere.</p>
                <p class="text-muted small mb-1">🔍 Filter by <strong>category, price, or rating</strong>.</p>
                <p class="text-muted small mb-3">⭐ Read real feedback and order securely.</p>

                <!-- Button -->
                <a asp-controller="TraderDirectory" asp-action="List"
                   class="btn btn-browse rounded-pill px-4 py-2 fw-semibold">
                    Start Browsing <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>

    <!-- Custom CSS -->
    <style>
        .trader-card {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(0,0,0,0.05);
            transition: all 0.3s ease;
        }

            .trader-card:hover {
                transform: translateY(-8px) scale(1.02);
                box-shadow: 0 10px 25px rgba(0,0,0,0.1);
            }

        .icon-circle {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            background: linear-gradient(135deg, #007bff, #00c6ff);
            color: #fff;
            font-size: 2rem;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(0,123,255,0.4);
        }

        .btn-browse {
            background: linear-gradient(135deg, #007bff, #00c6ff);
            color: #fff !important;
            border: none;
            box-shadow: 0 5px 15px rgba(0,123,255,0.3);
            transition: all 0.3s ease;
        }

            .btn-browse:hover {
                background: linear-gradient(135deg, #0056b3, #0094cc);
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(0,123,255,0.5);
            }
    </style>




    <h3 class="section-title"><i class="fas fa-store me-2"></i>Trader Dashboard</h3>
    <div class="dashboard-grid">
        <div class="dashboard-card card-primary">
            <i class="fas fa-plus card-icon"></i>
            <h5>Add Product</h5>
            <p>Create new products for your store</p>
            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add New Product</a>
        </div>
        <div class="dashboard-card card-success">
            <i class="fas fa-boxes card-icon"></i>
            <h5>My Products</h5>
            <p>Manage your product inventory</p>
            <a asp-controller="Product" asp-action="MyProducts" class="btn btn-success">Manage Products</a>
        </div>
        <div class="dashboard-card card-warning">
            <i class="fas fa-boxes card-icon"></i>
            <h5>Trader Orders</h5>
            <p>View all customer orders for your products</p>
            <a href="@Url.Action("Index", "Order")" class="btn btn-warning">
                <i class="fas fa-list me-1"></i> View Orders
            </a>
        </div>
        <div class="dashboard-card card-info">
            <i class="fas fa-user-tie card-icon"></i>
            <h5>Trader Profile</h5>
            <p>View and update your profile</p>
            <a asp-controller="Trader" asp-action="MyProfile" class="btn btn-info">View Profile</a>
        </div>
    </div>
    }
    else if (ViewBag.Role == "Trader" && !ViewBag.HasTraderProfile)
    {
    <h3 class="section-title"><i class="fas fa-exclamation-triangle me-2"></i>Complete Registration</h3>
    <div class="alert alert-warning">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Action Required:</strong> Complete your trader profile to access all trading features.
        <div class="mt-3">
            <a asp-controller="Trader" asp-action="Apply" class="btn btn-success">
                <i class="fas fa-user-plus me-2"></i>Complete Profile
            </a>
        </div>
    </div>
    }
    else
    {
<h3 class="section-title"><i class="fas fa-shopping-cart me-2"></i>Apply as Trader</h3>
    @*<div class="dashboard-grid">
        <div class="dashboard-card card-primary">
            <i class="fas fa-shopping-bag card-icon"></i>
            <h5>Browse Products</h5>
            <p>Discover amazing products from traders</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary">Browse Now</a>
        </div>
        <div class="dashboard-card card-info">
            <i class="fas fa-list-alt card-icon"></i>
            <h5>My Orders</h5>
            <p>Track your order status and history</p>
            <a asp-controller="Order" asp-action="MyOrders" class="btn btn-info">View Orders</a>
        </div>
    </div>*@

    <div class="alert alert-info">
        <i class="fas fa-store me-2"></i>
        <strong>Want to become a seller?</strong> Join our trader community and start selling your products!<br/>
        <strong>Want to See detail Of Other Trader</strong> See tranction and feedbacks.
        <div class="mt-3">
            <a asp-controller="Trader" asp-action="Apply" class="btn btn-success">
                <i class="fas fa-rocket me-2"></i>Apply as Trader
            </a>
        </div>
    </div>
    }



    <!-- Management Overview Section -->
    <h3 class="section-title"><i class="fas fa-chart-line me-2"></i>Shoping Dashboard</h3>
    <div class="dashboard-grid">
        <div class="dashboard-card card-primary">
            <i class="fas fa-box-open card-icon"></i>
            <h5>Products</h5>
            <p>Manage your complete product catalog</p>
            <div class="action-buttons">
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-sm">
                    <i class="fas fa-eye me-1"></i>View All
                </a>
            </div>
        </div>

        <div class="dashboard-card card-info">
            <i class="fas fa-clipboard-list card-icon"></i>
            <h5>My Orders</h5>
            <p>View and process Your orders</p>
            <a href="@Url.Action("MyOrders", "Order")" class="btn btn-info">
                <i class="fas fa-shopping-cart me-1"></i>Manage Orders
            </a>
        </div>

        <div class="dashboard-card card-warning">
            <i class="fas fa-comments card-icon"></i>
            <h5>Messages</h5>
            <p>Customer communication and support</p>
            <a href="@Url.Action("Index", "Message")" class="btn btn-warning">
                <i class="fas fa-envelope me-1"></i>View Messages
            </a>
        </div>
    </div>

    <!-- Account Actions -->
    <div class="mt-5 pt-4 border-top">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h6 class="mb-1">Need to sign out?</h6>
                <small class="text-muted">Your session will be securely ended</small>
            </div>
            <form method="post" asp-controller="Account" asp-action="Logout" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-outline-danger">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </button>
            </form>
        </div>
    </div>
</div>

