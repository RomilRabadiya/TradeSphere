@model IEnumerable<Message>

@{
    ViewData["Title"] = "Messages";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TraadeSphere_vrund</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container py-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
        
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2>Messages</h2>
            <a href="@Url.Action("Send", "Message")" class="btn btn-primary">Send Message</a>
        </div>
        
        @if (Model.Any())
        {
            <div class="row">
                @foreach (var message in Model.OrderByDescending(m => m.SentDate))
                {
                    <div class="col-12 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="card-subtitle mb-2 text-muted">
                                            From: @(message.Sender?.FullName ?? message.Sender?.Email ?? "Unknown")
                                            To: @(message.Receiver?.Name ?? "Unknown")
                                        </h6>
                                        <p class="card-text">@Html.Raw(message.Content.Length > 100 ? message.Content.Substring(0, 100) + "..." : message.Content)</p>
                                        <a href="@Url.Action("Details", "Message", new { id = message.MessageId })" class="btn btn-sm btn-outline-primary">View Details</a>
                                    </div>
                                    <div class="text-end">
                                        <small class="text-muted">@message.SentDate.ToString("dd/MM/yyyy HH:mm")</small><br>
                                        <span class="badge bg-@(message.Status == "Unread" ? "warning" : "success")">@message.Status</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <h4>No Messages</h4>
                <p>You don't have any messages yet.</p>
                <a href="@Url.Action("Send", "Message")" class="btn btn-primary">Send Your First Message</a>
            </div>
        }
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
