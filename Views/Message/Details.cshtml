@model Message

@{
    ViewData["Title"] = "Message Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - TradeSphere</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h2 class="mb-0">Message Details</h2>
                        <span class="badge bg-@(Model.Status == "Unread" ? "warning" : "success")">@Model.Status</span>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">From:</h6>
                                <p class="mb-0"><strong>@(Model.Sender?.FullName ?? Model.Sender?.Email ?? "Unknown")</strong></p>
                            </div>
                            <div class="col-md-6">
                                <h6 class="text-muted mb-1">To:</h6>
                                <p class="mb-0"><strong>@(Model.Receiver?.Name ?? "Unknown")</strong></p>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <h6 class="text-muted mb-1">Sent Date:</h6>
                            <p class="mb-0">@Model.SentDate.ToString("dddd, MMMM dd, yyyy 'at' h:mm tt")</p>
                        </div>
                        
                        <div class="mb-3">
                            <h6 class="text-muted mb-1">Message:</h6>
                            <div class="border rounded p-3 bg-light">
                                <p class="mb-0" style="white-space: pre-wrap;">@Model.Content</p>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index", "Message")" class="btn btn-secondary">Back to Messages</a>
                            @{
                                // Check if current user can reply
                                var currentUserId = ViewContext.HttpContext.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                                var showReplyButton = currentUserId != null && Model.SenderId != currentUserId;
                            }
                            @if (showReplyButton)
                            {
                                <a href="@Url.Action("Reply", "Message", new { messageId = Model.MessageId })" class="btn btn-primary">Reply</a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
